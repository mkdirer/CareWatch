<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/rounded10_bg"
    android:backgroundTint="#ffffff"
    android:id="@+id/medicineBox"
    android:layout_marginStart="20dp"
    android:longClickable="true"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:padding="13dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/medicineImage"
        android:layout_width="80dp"
        android:padding="5dp"
        android:layout_height="80dp"
        android:src="@drawable/pills"
        android:contentDescription="pill" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/medicineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Centrum"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/medicineTypeAndAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 capsules "
            android:fontFamily="@font/open_sans_regular"
            android:textSize="17sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingEnd="5dp"
            android:textColor="#707070"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <TextView
        android:id="@+id/medicineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:text="13:00"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="16sp"
        android:textColor="#777777"/>

</LinearLayout>